{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<header>
		<div>
			<button class="back-button" onclick="window.history.back();" type="button">Go back</button>
		</div>
		{% if app.user %}
			<div>
				<button class="back-button" onclick="window.history.back();" type="button">Go back</button>
			</div>
			<div class="mb-3">
				{{ app.user.firstname }}, vous Ãªtes connectÃ©
