{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<header>
    <button class="back-button" onClick="window.history.back();" type="button">Go back</button>
</header>

    <h2>Pour créer un compte, veuillez remplir le formulaire</h2>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.firstname) }}
        {{ form_row(registrationForm.lastname) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.adress) }}
        {{ form_row(registrationForm.postalcode) }}
        {{ form_row(registrationForm.city) }}
        {{ form_row(registrationForm.country) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="primary-button">Créer un compte</button>
    {{ form_end(registrationForm) }}
{% endblock %}
